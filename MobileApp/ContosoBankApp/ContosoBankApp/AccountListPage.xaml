<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContosoBankApp.AccountListPage"
             Title="Account List">

  <ContentPage.Content>
    <ListView  x:Name="lstView" RowHeight="100">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Fill" BackgroundColor="Olive">
              <StackLayout Orientation="Vertical">
                <Label Text = "{Binding AccountNumber}" FontSize="24" />
                <Label Text = "{Binding AccountType}" />
                <Label Text = "{Binding AccountBalance}" />
              </StackLayout>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </ContentPage.Content>
  
</ContentPage>